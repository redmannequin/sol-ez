
account SysProgram {}
account Signer {}

account Count {
    data: u8 = 1;
}

accounts Initialize {
    init counter: Count = 1;
    mut signer: Signer = 2;
    program: SysProgram = 3;
}

accounts Update {
    mut counter: Count = 1;
    signer: Signer = 2;
}

accounts Close {
    mut counter: Count = 1;
    mut signer: Signer = 2;
}

contract Counter {
    instruction initialize(Initialize) = 1;
    instruction update(Update) = 2;
    instruction close(Close) = 3;
}