message InitialValue {
    value: u8 = 1;
}

account Count {
    data: u8 = 1;
}

accounts Initialize {
    init counter: Count = 1;
    mutable signer: Signer = 2;
}

accounts Update {
    mutable counter: Count = 1;
    signer: Signer = 2;
}

accounts Close {
    mutable counter: Count = 1;
    mutable signer: Signer = 2;
}

contract Counter {
    instruction initialize(Initialize, InitialValue) = 1;
    instruction update(Update) = 2;
    instruction close(Close) = 3;
}